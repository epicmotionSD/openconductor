# x3o.ai Marketplace - Production Environment Template
# Copy these to your Vercel environment variables

# Database Configuration (Supabase) - Replace with your actual values
DATABASE_URL="postgresql://postgres:[YOUR_SUPABASE_PASSWORD]@db.[YOUR_SUPABASE_PROJECT_REF].supabase.co:5432/postgres"
DIRECT_URL="postgresql://postgres.[YOUR_SUPABASE_PROJECT_REF]:[YOUR_SUPABASE_PASSWORD]@aws-0-us-east-1.pooler.supabase.com:6543/postgres"

# NextAuth Configuration
NEXTAUTH_URL="https://[YOUR_VERCEL_DOMAIN]"
NEXTAUTH_SECRET="[GENERATE_SECURE_SECRET_FOR_PRODUCTION]"

# Google OAuth (Production)
GOOGLE_CLIENT_ID="[YOUR_GOOGLE_OAUTH_CLIENT_ID]"
GOOGLE_CLIENT_SECRET="[YOUR_GOOGLE_OAUTH_CLIENT_SECRET]"

# Stripe Integration (Production)
STRIPE_PUBLIC_KEY="pk_live_[YOUR_STRIPE_PUBLIC_KEY]"
STRIPE_SECRET_KEY="sk_live_[YOUR_STRIPE_SECRET_KEY]"
STRIPE_WEBHOOK_SECRET="whsec_[YOUR_WEBHOOK_SECRET]"

# Trinity Agent Configuration - Production
TRINITY_AGENT_API_URL="https://[YOUR_VERCEL_DOMAIN]/api/agents"
ORACLE_AGENT_ENDPOINT="https://[YOUR_VERCEL_DOMAIN]/api/trial/access"
SENTINEL_AGENT_ENDPOINT="https://[YOUR_VERCEL_DOMAIN]/api/trial/access"
SAGE_AGENT_ENDPOINT="https://[YOUR_VERCEL_DOMAIN]/api/trial/access"

# Email Service Configuration
EMAIL_SERVICE_PROVIDER="sendgrid"
SENDGRID_API_KEY="[YOUR_SENDGRID_API_KEY]"
EMAIL_FROM="noreply@x3o.ai"
EMAIL_FROM_NAME="x3o.ai Trinity Agents"

# Application Configuration
NEXT_PUBLIC_APP_URL="https://[YOUR_VERCEL_DOMAIN]"
NEXT_PUBLIC_ENTERPRISE_DASHBOARD_URL="https://[YOUR_VERCEL_DOMAIN]/trial-dashboard"
NEXT_PUBLIC_SUPPORT_EMAIL="support@x3o.ai"
NEXT_PUBLIC_SALES_EMAIL="sales@x3o.ai"

# Analytics and Monitoring
ANALYTICS_PROVIDER="mixpanel"
MIXPANEL_TOKEN="[YOUR_MIXPANEL_TOKEN]"
ERROR_TRACKING_DSN="[YOUR_SENTRY_DSN]"

# Security
JWT_SECRET="[GENERATE_SECURE_JWT_SECRET]"
ENCRYPTION_KEY="[GENERATE_32_CHAR_ENCRYPTION_KEY]"
API_RATE_LIMIT="100"

# Feature Flags
ENABLE_TRIAL_EXTENSIONS="true"
ENABLE_ENTERPRISE_FEATURES="true"
ENABLE_REAL_TRINITY_AGENTS="true"
ENABLE_CONVERSION_TRACKING="true"

# Production
NODE_ENV="production"
LOG_LEVEL="info"

# Trinity Agent Trial Configuration
TRIAL_DURATION_DAYS="14"
TRIAL_ORACLE_LIMIT="100"
TRIAL_SENTINEL_LIMIT="50"
TRIAL_SAGE_LIMIT="200"