# openconductor.ai Marketplace - Environment Variables

# Database Configuration (Connect to flexabrain-enterprise database)
DATABASE_URL="postgresql://username:password@localhost:5432/flexabrain_enterprise"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# Google OAuth (Optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Stripe Integration (For real billing)
STRIPE_PUBLIC_KEY="pk_test_your-stripe-public-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# Trinity Agent Configuration
TRINITY_AGENT_API_URL="http://localhost:3000/api/agents"
ORACLE_AGENT_ENDPOINT="http://localhost:3001/api/oracle"
SENTINEL_AGENT_ENDPOINT="http://localhost:3002/api/sentinel" 
SAGE_AGENT_ENDPOINT="http://localhost:3003/api/sage"

# Email Service Configuration
EMAIL_SERVICE_PROVIDER="sendgrid" # sendgrid, mailgun, ses
SENDGRID_API_KEY="your-sendgrid-api-key"
EMAIL_FROM="noreply@openconductor.ai"
EMAIL_FROM_NAME="openconductor.ai Trinity Agents"

# Application Configuration
NEXT_PUBLIC_APP_URL="https://openconductor.ai"
NEXT_PUBLIC_ENTERPRISE_DASHBOARD_URL="https://dashboard.openconductor.ai"
NEXT_PUBLIC_SUPPORT_EMAIL="support@openconductor.ai"
NEXT_PUBLIC_SALES_EMAIL="sales@openconductor.ai"

# Analytics and Monitoring
ANALYTICS_PROVIDER="mixpanel" # mixpanel, posthog, amplitude
MIXPANEL_TOKEN="your-mixpanel-token"
ERROR_TRACKING_DSN="your-sentry-dsn"

# Security
JWT_SECRET="your-jwt-secret-key"
ENCRYPTION_KEY="your-encryption-key-for-sensitive-data"
API_RATE_LIMIT="100" # requests per minute per IP

# Feature Flags
ENABLE_TRIAL_EXTENSIONS="true"
ENABLE_ENTERPRISE_FEATURES="true"
ENABLE_REAL_TRINITY_AGENTS="true"
ENABLE_CONVERSION_TRACKING="true"

# Development
NODE_ENV="development"
LOG_LEVEL="info"