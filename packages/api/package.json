{
  "name": "@openconductor/api",
  "version": "0.1.0",
  "description": "OpenConductor API server - The orchestration platform backend for modern AI development. Registry and management for Vercel, v0, Supabase, and BaseHub integrations.",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc --skipLibCheck && echo 'TypeScript build completed' && ls -la dist/",
    "build:vercel": "node scripts/prebuild-shared.js && npx tsc --skipLibCheck",
    "start": "node dist/server.js",
    "db:migrate": "tsx src/db/deploy-to-supabase.ts",
    "db:seed": "tsx src/db/seed-all-servers.ts",
    "db:seed:all": "tsx src/db/seed-all-servers.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "@openconductor/shared": "file:./openconductor-shared-1.0.0.tgz",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.3.0",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "marked": "^11.1.1",
    "pg": "^8.17.1",
    "rate-limit-redis": "^4.2.0",
    "stripe": "^20.2.0",
    "winston": "^3.11.0",
    "yargs": "^18.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "supertest": "^6.3.3",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.17"
  }
}
