{
  "name": "@openconductor/api",
  "version": "0.1.0",
  "description": "OpenConductor API server - The orchestration platform backend for modern AI development. Registry and management for Vercel, v0, Supabase, and BaseHub integrations.",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc --skipLibCheck && echo 'TypeScript build completed' && ls -la dist/",
    "vercel-build": "cd ../shared && npm install && npm run build && cd ../api && npm install && tsc --skipLibCheck",
    "start": "node dist/server.js",
    "db:migrate": "tsx src/db/deploy-to-supabase.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:seed:127": "tsx src/db/seed-127-servers.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "@openconductor/shared": "file:../shared",
    "@opentelemetry/api": "^1.0.0",
    "@opentelemetry/auto-instrumentations-node": "^0.35.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.33.0",
    "@opentelemetry/sdk-node": "^0.44.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.3.0",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "marked": "^11.1.1",
    "pg": "^8.11.3",
    "rate-limit-redis": "^4.2.0",
    "winston": "^3.11.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "supertest": "^6.3.3",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.4"
  }
}
