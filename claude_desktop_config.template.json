{
  "$schema": "https://schema.anthropic.com/claude_desktop_config.json",
  "mcpServers": {
    "openconductor-filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "C:\\Users\\shawn\\apps\\openconductor"
      ],
      "env": {}
    },

    "openconductor-registry": {
      "command": "npx",
      "args": [
        "-y",
        "@openconductor/mcp-registry"
      ],
      "env": {},
      "description": "OpenConductor registry MCP for discovery/search"
    },

    "openconductor-database-local": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-postgres",
        "${DATABASE_URL}"
      ],
      "env": {},
      "description": "Local PostgreSQL database for development"
    },

    "openconductor-supabase": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-postgres",
        "${SUPABASE_DATABASE_URL}"
      ],
      "env": {},
      "description": "Production Supabase PostgreSQL database"
    },

    "supabase": {
      "url": "https://mcp.supabase.com/mcp?project_ref=${SUPABASE_PROJECT_REF}"
    },

    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "GitHub integration for repository operations"
    },

    "openconductor-redis": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-redis",
        "${REDIS_URL}"
      ],
      "env": {},
      "description": "Redis cache and session store"
    }
  }
}
