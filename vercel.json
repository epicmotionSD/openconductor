{
  "buildCommand": "cd packages/frontend && pnpm run build",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "outputDirectory": "packages/frontend/.next",
  "ignoreCommand": "git diff HEAD^ HEAD --quiet packages/frontend/",
  "ignore": [
    "packages/api/**",
    "packages/cli/**",
    "packages/shared/**"
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://api.openconductor.ai/v1",
    "NODE_ENV": "production"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "regions": ["iad1"]
}